<%- layout("/layout/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>In detail explaination about this place - <%= content.title %></h3>
    </div>
            <div class="card col-6 offset-2" style="width: 18rem;">
                <img src="<%=content.image.url%>" class="card-img-top show-Photo" alt="...">
                <div class="card-body">
                <p class="card-text"><b><%=content.title%></b></p>
                <%= content.description %><br>
                &#8377;<%= content.price.toLocaleString("en-IN") %><br>
                <%= content.location %><br>
                <%= content.country %><br>
                </div>
            </div>
    <div class="colbtn ">
        <a href="http://localhost:8080/listing/<%= content._id %>/edits" class="btn btn-dark col-1 offset-2">edit</a>
        <form action="http://localhost:8080/listing/<%= content._id %>?_method=DELETE" method="post">
            <button class="btn btn-dark offset-4 add-btn">Delete</button>
        </form>
    </div>
    <script>
        document.querySelector("form").addEventListener("submit",(e)=>{
            e.preventDefault();
            let con = confirm("Are sure this data will be deleted permanently!!!");
            if(con){
                document.querySelector("form").submit();
            }
        });
    </script>
</div></div></body>