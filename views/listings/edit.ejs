<%- layout("/layout/boilerplate") %>
<body>
    <h1>Create New Listing</h1><br><br>
    <div class="row">
        <div class="col-8 offset-2">
            <form action="http://localhost:8080/listing/<%= content._id %>?_method=PUT" method="post">
                <div class="mb-3">
                    <label for="title" class="form-label">Title : </label><br>
                <input type="text" value="<%= content.title %>" name="Listing[title]" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description : </label><br>
                <textarea name="Listing[description]" required rows="3" cols="30" class="form-control"><%= content.description %></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image : </label><br>
                <input type="text" src="" alt="" name="Listing[image]" value="<%= content.image %>" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price : </label><br>
                <input type="number" value="<%= content.price %>" name="Listing[price]" required class="form-control">
                </div>
                <div class="mb-3">
                    <label for="country" class="form-label">Country : </label><br>
                <input type="text" value="<%= content.country %>" name="Listing[country]" class="form-control" required class="form-control">
                    
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location : </label><br>
                <input type="text" value="<%= content.location %>" name="Listing[location]" required class="form-control">
                </div>
                <button class="btn btn-dark add-btn">Update</button><!--SENDED DATA IN BULK SOMEHOW IN ARRAY FORMAT-->
            </form>
        </div>
        </div>
    <script>
        document.querySelector("form").addEventListener("submit",(e)=>{
            e.preventDefault();
            let con = confirm("Are sure this will be updated permanently!!!");
            if(con){
                document.querySelector("form").submit();
            }
        });
    </script>
</body>