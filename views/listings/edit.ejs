<%- layout("/layout/boilerplate") %>
<body>
    <h1>Create New Listing</h1><br><br>
    <form action="http://localhost:8080/listing/<%= content._id %>?_method=PUT" method="post">
        <label for="title">Title : </label>
        <input type="text" value="<%= content.title %>" name="Listing[title]" required><br>
        <label for="description">Description : </label><br>
        <textarea name="Listing[description]" required rows="6" cols="30"><%= content.description %></textarea><br><br>
        <label for="image">Image : </label>
        <input type="text" src="" alt="" name="Listing[image]" value="<%= content.image %>"><br>
        <label for="price">Price : </label>
        <input type="number" value="<%= content.price %>" name="Listing[price]" required><br>
        <label for="location">Location : </label>
        <input type="text" value="<%= content.location %>" name="Listing[location]" required><br>
        <label for="country">Country : </label>
        <input type="text" value="<%= content.country %>" name="Listing[country]" required><br>
        <button>Update</button><!--SENDED DATA IN BULK SOMEHOW IN ARRAY FORMAT-->
    </form>
    <script>
        document.querySelector("form").addEventListener("submit",(e)=>{
            e.preventDefault();
            let con = confirm("Are sure this will be updated permanently!!!");
            if(con){
                document.querySelector("form").submit();
            }
        });
    </script>
</body>